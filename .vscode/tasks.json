{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "graph data",
            "type": "shell",
            "command": "echo **/*.expand | xargs cally --no-externs > out.dot"
        },  
        {
            "label": "graph data (package)",
            "type": "shell",
            "command": "echo **/*.expand | xargs ./build/dist/cally --no-externs > out.dot"
        },  
        {
            "label": "show data",
            "type": "shell",
            "command": "cat out.dot",
            "dependsOn":["graph data"]
        },      
        {
            "label": "graph image",
            "type": "shell",
            "command": "cat out.dot | dot -Grankdir=LR -Tpng -o full_caller.png && mimeopen full_caller.png",
            "dependsOn":["show data"]
        },
        {
            "label": "create binary",
            "type": "shell",
            "command": "../scripts/buildLinux.sh",
            "options": {
				"cwd": "${workspaceFolder}/build"
			},
        },
    ]
}